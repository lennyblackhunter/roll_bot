<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>{{ title }}</title>
    <style>
      :root {
        --bg: #f6f1e7;
        --ink: #2b2217;
        --accent: #9b7d4c;
        --panel: #fffaf0;
      }
      * { box-sizing: border-box; }
      body {
        margin: 0;
        font-family: "Georgia", "Times New Roman", serif;
        color: var(--ink);
        background: radial-gradient(circle at top, #fffdf8, var(--bg));
      }
      .page {
        width: 210mm;
        min-height: 297mm;
        margin: 0 auto;
        padding: 20mm 16mm;
        background: linear-gradient(180deg, #fffdf8, var(--bg));
      }
      .header {
        border: 2px solid var(--accent);
        padding: 10px 14px;
        text-align: center;
        letter-spacing: 2px;
        text-transform: uppercase;
        font-size: 20px;
      }
      .name {
        margin: 12px 0 24px;
        font-size: 28px;
        text-align: center;
      }
      .columns {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 16px;
      }
      .panel {
        background: var(--panel);
        border: 1px solid var(--accent);
        padding: 10px 12px;
        border-radius: 6px;
      }
      .panel h2 {
        margin: 0 0 8px;
        font-size: 14px;
        text-transform: uppercase;
        letter-spacing: 1px;
        border-bottom: 1px solid var(--accent);
        padding-bottom: 4px;
      }
      .stat {
        display: flex;
        justify-content: space-between;
        padding: 2px 0;
        font-family: "Verdana", "Arial", sans-serif;
        font-size: 12px;
      }
      .stat-name { text-transform: capitalize; }
      .abilities-list {
        column-count: 2;
        column-gap: 16px;
      }
      .abilities-list .stat {
        break-inside: avoid;
      }
      .footer {
        margin-top: 24px;
        font-size: 11px;
        text-align: center;
        color: #5d4a31;
      }
    </style>
  </head>
  <body>
    <div class="page">
      <div class="header">{{ title }}</div>
      <div class="name">{{ character_name }}</div>
      <div class="columns">
        <div class="panel">
          <h2>Attributes</h2>
          {% for name, value in attributes %}
          <div class="stat">
            <span class="stat-name">{{ name }}</span>
            <span class="stat-value">{{ value }}</span>
          </div>
          {% endfor %}
          <h2>Resources</h2>
          {% for name, value in resources %}
          <div class="stat">
            <span class="stat-name">{{ name }}</span>
            <span class="stat-value">{{ value }}</span>
          </div>
          {% endfor %}
        </div>
        <div class="panel">
          <h2>Abilities</h2>
          <div class="abilities-list">
            {% for name, value in abilities %}
            <div class="stat">
              <span class="stat-name">{{ name }}</span>
              <span class="stat-value">{{ value }}</span>
            </div>
            {% endfor %}
          </div>
        </div>
      </div>
      <div class="footer">Generated by roll_bot sheet renderer</div>
    </div>
  </body>
</html>
